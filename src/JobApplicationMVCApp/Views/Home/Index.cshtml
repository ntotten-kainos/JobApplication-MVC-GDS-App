@{
    ViewData["Title"] = "Home Page";
    // The Layout is assumed to include GOV.UK header/footer and main wrappers
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="content" role="main" class="govuk-main-wrapper">

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <!-- Main Heading -->
      <div class="gem-c-title govuk-!-margin-top-0 govuk-!-margin-bottom-8">
        <h1 class="govuk-heading-xl">Find a job</h1>
      </div>

      <!-- Introduction and Description -->
      <div class="gem-c-govspeak govuk-govspeak govuk-!-margin-bottom-6">
        <p>
          Explore a wide range of full-time and part-time job opportunities. 
          Register for an account to easily search and apply for roles that suit you. 
          If you're an administrator, you can also post and manage job listings.
        </p>

        <p>
          Our job application portal streamlines your job search and hiring process, 
          helping you find the perfect match quickly and easily.
        </p>
      </div>

      <!-- Start Now Button -->
      <p class="get-started group">
        <a 
          class="govuk-button govuk-button--start" 
          role="button" 
          aria-label="Start now" 
          data-module="govuk-button"
          href="@Url.Page("/Account/Login", new { area = "Identity" })">
          <span>Start now</span>
          <svg class="govuk-button__start-icon govuk-!-display-none-print" 
               xmlns="http://www.w3.org/2000/svg" 
               width="17.5" 
               height="19" 
               viewBox="0 0 33 40" 
               focusable="false" 
               aria-hidden="true">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
          </svg>
        </a>
        <span class="govuk-visually-hidden">on the Job Application Portal</span>
        
      </p>
      
      <!-- Additional Links/Information -->
      <section class="more govuk-!-margin-top-6">
        <p>
          If you need help or support, visit our <a class="govuk-link" href="/Help">Help and Support</a> page for more information.
        </p>
      </section>
      
    </div>
    <div class="govuk-grid-column-one-third">
      <!-- Optional Sidebar or Related Content can go here, if needed -->
    </div>
  </div>

</main>