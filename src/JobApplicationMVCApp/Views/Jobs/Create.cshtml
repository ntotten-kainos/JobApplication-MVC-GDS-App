@model JobApplicationMVCApp.Models.JobPosting

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Job Posting</h4>
<hr />
<div>
    <div class="govuk-grid-row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="govuk-grid-column-three-quarters">
                <div class="govuk-form-group">
                    <label asp-for="JobTitle" class="govuk-label">Job Title</label>
                    <input asp-for="JobTitle" class="govuk-input"/>
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="JobDescription" class="govuk-label">Description</label>
                    <textarea asp-for="JobDescription" class="govuk-input" ></textarea>
                    <span asp-validation-for="JobDescription" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="JobRequirements" class="govuk-label">Requirements</label>
                    <textarea asp-for="JobRequirements" class="govuk-textarea"></textarea>
                    <span asp-validation-for="JobRequirements" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="JobLocationId" class="govuk-label">Location</label>
                    <select asp-for="JobLocationId" class="govuk-input" asp-items="ViewBag.JobLocationId"></select>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="JobDepartmentId" class="govuk-label">Department</label>
                    <select asp-for="JobDepartmentId" class="govuk-input" asp-items="ViewBag.JobDepartmentId"></select>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="Salary" class="govuk-label">Salary</label>
                    <input asp-for="Salary" class="govuk-input"/>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="ClosingDate" class="govuk-label">Closing Date</label>
                    <input asp-for="ClosingDate" class="govuk-input"/>
                    <span asp-validation-for="ClosingDate" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="Type" class="govuk-label">Job Type</label>
                    <select asp-for="Type" class="govuk-input"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="govuk-form-group">
                    <label asp-for="Status" class="govuk-label">Status</label>
                    <select asp-for="Status" class="govuk-input"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                @* <div class="govuk-form-group"> *@
                @*     <label asp-for="DatePosted" class="govuk-label"></label> *@
                @*     <input asp-for="DatePosted" class="govuk-input" /> *@
                @*     <span asp-validation-for="DatePosted" class="text-danger"></span> *@
                @* </div> *@
                <div class="govuk-form-group">
                    <button type="submit" name="action" value="Create" class="govuk-button govuk-!-width-one-quarter">Submit</button>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <button type="submit" name="action" value="Draft" class="govuk-button govuk-button--secondary govuk-!-width-full">Save as draft</button>
                <button type="submit" name="action" value="Delete" class="govuk-button govuk-button--warning govuk-!-width-full">Delete draft</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="govuk-link">Back to List</a>
</div>

